<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >


    <Button
            android:id="@+id/MyVideoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/video_button" android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" android:layout_marginTop="210dp"/>

    <Button
            android:id="@+id/MyMusicButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/music_button"
            android:layout_below="@+id/MyVideoButton" android:layout_alignParentLeft="true"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Map"
            android:id="@+id/map" android:layout_below="@+id/MyMusicButton" android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"/>

</RelativeLayout>