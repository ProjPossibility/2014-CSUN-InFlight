<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">


    <Button
            android:id="@+id/MyVideoButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/video_button" />

    <Button
            android:id="@+id/MyMusicButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/music_button"
            android:layout_below="@id/MyVideoButton" />
    <Button
            android:id="@+id/MyPeriodicalButton"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/periodical_button"
            android:layout_below="@id/MyMusicButton" />

</RelativeLayout>