<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/clouds"
    >
    <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:textColor="#000000"
            android:id="@+id/digitalClock" android:layout_toRightOf="@+id/bFoodnBev"
            android:textSize="40sp" />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/media"
            android:textSize="25sp"
            android:id="@+id/bEntertainment"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/bLavatory"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/bathroom"
            android:textSize="25sp"
            android:layout_gravity="bottom"
            android:id="@+id/bLavatory"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/menu"
            android:layout_centerVertical="true"
            android:textSize="25sp"
            android:id="@+id/bFoodnBev"
            android:layout_toRightOf="@+id/bLavatory"
            />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/request_response"
            android:textColor="#000000"
            android:text="@string/seek_bar_label"
            android:textSize="40sp"
            android:layout_above="@+id/seekBar" android:layout_alignLeft="@+id/seekBar"/>
            <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/seekBar"
            android:layout_marginBottom="57dp" android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" android:layout_marginLeft="56dp"
            android:layout_alignRight="@+id/bLavatory"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accessibility"
            android:textSize="25sp"
            android:id="@+id/accessibility"
            android:layout_alignBottom="@+id/seekBar"
            android:layout_alignTop="@+id/request_response" android:layout_alignRight="@+id/digitalClock"
            android:layout_toRightOf="@+id/seekBar"/>

</RelativeLayout>

