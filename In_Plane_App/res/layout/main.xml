<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ff5fc3ff"
    >
    <DigitalClock
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleX="3"
            android:scaleY="3"
            android:layout_marginLeft="800sp"
            android:layout_marginTop="20sp"
            android:textColor="00000000"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/media"
            android:textSize="40sp"
            android:id="@+id/bEntertainment"
            android:layout_centerVertical="true"
            android:layout_marginLeft="75dp"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/bathroom"
            android:textSize="40sp"
            android:layout_gravity="bottom"
            android:id="@+id/bLavatory"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/bEntertainment"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/menu"
            android:layout_centerVertical="true"
            android:textSize="40sp"
            android:id="@+id/bFoodnBev"
            android:layout_toRightOf="@+id/bLavatory"
            />
    <Button
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:text="@string/map"
            android:textSize="40sp"
            android:id="@+id/bMap"
            android:layout_toRightOf="@+id/bFoodnBev"
            android:layout_centerVertical="true"
            />
 <TextView
         android:layout_width="fill_parent"
           android:layout_height="fill_parent"
           android:id="@+id/request_response"
         />

</RelativeLayout>

